<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.client.Controllers.LoginController"
            prefWidth="400" prefHeight="300" style="-fx-padding: 20;">
    <children>
        <VBox spacing="10" alignment="CENTER">
            <Label text="Collaborative Text Editor - Login" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <TextField fx:id="usernameField" promptText="Enter your username" />
            <TextField fx:id="usermodeField" promptText="Enter mode: EDITOR or VIEWER" />
            <Button text="Login" onAction="#handleLogin" />
        </VBox>
    </children>
</AnchorPane>
